def calculator():
    print("Simple Calculator")
    print("Operations: +  -  *  /")

    # Get user input
    num1 = float(input("Enter first number: "))
    op = input("Enter operation (+, -, *, /): ")
    num2 = float(input("Enter second number: "))

    # Calculate based on operation
    if op == "+":
        result = num1 + num2
    elif op == "-":
        result = num1 - num2
    else:
        return "Invalid operation."

    return f"Result: {result}"


# Run the calculator
print(calculator())
